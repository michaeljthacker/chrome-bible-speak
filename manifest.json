{
  "manifest_version": 3,
  "name": "Bible Name Aid",
  "version": "1.1.0",
  "description": "Adds phonetic pronunciations and clickable links for Biblical names found on webpages, sourced from BibleSpeak.org.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/BibleSpeakIcon_16.png",
      "32": "icons/BibleSpeakIcon_32.png",
      "48": "icons/BibleSpeakIcon_48.png",
      "64": "icons/BibleSpeakIcon_64.png",
      "128": "icons/BibleSpeakIcon_128.png",
      "256": "icons/BibleSpeakIcon_256.png"
    }
  },
  "icons": {
    "16": "icons/BibleSpeakIcon_16.png",
    "32": "icons/BibleSpeakIcon_32.png",
    "48": "icons/BibleSpeakIcon_48.png",
    "64": "icons/BibleSpeakIcon_64.png",
    "128": "icons/BibleSpeakIcon_128.png",
    "256": "icons/BibleSpeakIcon_256.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "names_pronunciations.json",
        "manual_pronunciations.json",
        "icons/BibleSpeakIcon_32.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}